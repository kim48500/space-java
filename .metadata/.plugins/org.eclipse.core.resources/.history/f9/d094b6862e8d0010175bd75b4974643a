package classes2;
import java.util.Calendar;
/*
 *  java utill패키지(import해야함)에 있는 calendar
 *  Caleddar 날짜 및 시간 관련 메서드를 가지고 있음
 *  -static이 있는 메서드를 포함하고 있어서 new하지않고
 *  Calendar로 직접 접근함
 */
public class CalendarTest {

	public static void main(String[] args) {
	//Calendar 인스턴스 생성
		Calendar cal = Calendar.getInstance();
		System.out.println(cal);
		//현재 날짜와 시간출력 gettime
		System.out.println(cal.getTime());//Tue Sep 09 12:14:51 KST 2025
       //날짜 -년,월,일 -get()
		int year= cal.get(Calendar.YEAR);
		System.out.println(year);
		int month= cal.get(Calendar.MONTH)+1;
		System.out.println(month);
		int date= cal.get(Calendar.DATE)+1;
		System.out.println(date);
		//시분초
		int hour= cal.get(Calendar.HOUR);
		int minute= cal.get(Calendar.MINUTE);
		int seconde= cal.get(Calendar.SECOND);
		System.out.println((12+hour)+":"+minute+":"+seconde);
        //요일
		cal.get(Calendar.DAY_OF_WEEK);
		System.out.println(day);
	}

}
